        // API Status
        async function loadApiStatus() {
            try {
                const res = await fetch('/api/monitor/health');
                if (res.ok) {
                    const data = await res.json();
                    updateApiIndicator('status-shopee', 'latency-shopee', data.shopee);
                    updateApiIndicator('status-ml', 'latency-ml', data.mercadolivre);
                    updateApiIndicator('status-ali', 'latency-ali', data.aliexpress);
                    updateApiIndicator('status-amazon', 'latency-amazon', data.amazon);
                    updateApiIndicator('status-ai', 'latency-ai', data.ai);
                }
            } catch (err) {
                // Fallback: mark all as online if health endpoint not available
                ['shopee', 'ml', 'ali', 'amazon', 'ai'].forEach(api => {
                    const dot = document.getElementById(`status-${api}`);
                    if (dot) dot.className = 'status-dot online';
                });
            }
        }
        
        function updateApiIndicator(dotId, latencyId, apiData) {
            const dot = document.getElementById(dotId);
            const latency = document.getElementById(latencyId);
            
            if (!dot) return;
            
            if (apiData?.status === 'online' || apiData?.healthy !== false) {
                dot.className = 'status-dot online';
                if (latency && apiData?.latency) {
                    latency.textContent = `${apiData.latency}ms`;
                }
            } else if (apiData?.status === 'degraded') {
                dot.className = 'status-dot warning';
            } else {
                dot.className = 'status-dot offline';
            }
        }
        
        // Uptime counter
        function updateUptime() {
            const uptimeEl = document.getElementById('botUptime');
            if (!uptimeEl) return;
            
            const elapsed = Math.floor((Date.now() - serverStartTime) / 1000);
            const hours = Math.floor(elapsed / 3600);
            const minutes = Math.floor((elapsed % 3600) / 60);
            const seconds = elapsed % 60;
            
            let uptimeStr = '';
            if (hours > 0) uptimeStr += `${hours}h `;
            if (minutes > 0 || hours > 0) uptimeStr += `${minutes}m `;
            uptimeStr += `${seconds}s`;
            
            uptimeEl.innerHTML = `<i class="fas fa-clock mr-1"></i>Uptime: ${uptimeStr}`;
        }
        
        // Enhanced queue display
        function updateQueueDisplay(data) {
            const length = data.queueLength || data.length || 0;
            document.getElementById('queueLength').textContent = length;
            
            const badge = document.getElementById('queueStatusBadge');
            const progressBar = document.getElementById('queueProgressBar');
            const progressText = document.getElementById('queueProgressText');
            const etaValue = document.getElementById('queueEtaValue');
            const etaText = document.getElementById('queueEta');
            const delayEl = document.getElementById('queueDelay');
            const avgWaitEl = document.getElementById('queueAvgWait');
            
            // Update delay display
            if (delayEl) delayEl.textContent = data.promotionDelay || data.delay || 10;
            
            // Update avg wait time
            if (avgWaitEl) avgWaitEl.textContent = Math.round(data.avgWaitTimeSeconds || data.avgWait || 0);
            
            // Update ETA value
            const eta = data.estimatedTimeSeconds || data.estimatedTime || 0;
            if (etaValue) etaValue.textContent = formatTime(eta);
            
            const isProcessing = data.isProcessing || data.processing || false;
            
            if (isProcessing) {
                if (badge) {
                    badge.className = 'px-3 py-1 rounded-full bg-blue-500/50 text-xs font-medium animate-pulse';
                    badge.textContent = 'Processando';
                }
                if (progressBar) progressBar.style.width = '100%';
                if (progressText) progressText.textContent = 'Enviando...';
            } else if (length > 0) {
                if (badge) {
                    badge.className = 'px-3 py-1 rounded-full bg-yellow-500/50 text-xs font-medium';
                    badge.textContent = `${length} aguardando`;
                }
                if (progressBar) progressBar.style.width = `${Math.min(length * 10, 100)}%`;
                if (progressText) progressText.textContent = `${length} na fila`;
            } else {
                if (badge) {
                    badge.className = 'px-3 py-1 rounded-full bg-gray-600/50 text-xs font-medium';
                    badge.textContent = 'Idle';
                }
                if (progressBar) progressBar.style.width = '0%';
                if (progressText) progressText.textContent = 'Aguardando...';
            }
            
            // Update ETA text
            if (etaText) {
                if (eta > 0) {
                    etaText.textContent = `⏱️ Próximo envio em ~${formatTime(eta)}`;
                } else if (length > 0) {
                    etaText.textContent = '⚡ Processando próximo...';
                } else {
                    etaText.textContent = '✅ Fila vazia';
                }
            }
        }
        
        // Enhanced rate limit display
        function updateRateLimitDisplay(data) {
            const current = data.current || 0;
            const max = data.maxMessages || 5;
            const remaining = data.remaining ?? (max - current);
            const timeUntilNext = data.timeUntilNext || 0;
            const window = data.timeWindowSeconds || data.windowSeconds || 60;
            
            // Update values
            const currentEl = document.getElementById('rateCurrent');
            const maxEl = document.getElementById('rateMax');
            const windowEl = document.getElementById('rateWindow');
            const remainingEl = document.getElementById('rateRemaining');
            const cooldownValEl = document.getElementById('rateCooldownValue');
            const cooldownEl = document.getElementById('rateCooldown');
            const statusTextEl = document.getElementById('rateStatusText');
            const progressEl = document.getElementById('rateProgress');
            const statusEl = document.getElementById('rateLimitStatus');
            
            if (currentEl) currentEl.textContent = current;
            if (maxEl) maxEl.textContent = max;
            if (windowEl) windowEl.textContent = window;
            if (remainingEl) remainingEl.textContent = remaining;
            if (cooldownValEl) cooldownValEl.textContent = timeUntilNext > 0 ? formatTime(timeUntilNext) : '0s';
            
            const percentage = (current / max) * 100;
            if (progressEl) progressEl.style.width = `${Math.min(percentage, 100)}%`;
            
            if (timeUntilNext > 0) {
                if (progressEl) progressEl.className = 'h-full bg-gradient-to-r from-red-500 to-red-400 rounded-full transition-all duration-500';
                if (statusTextEl) statusTextEl.textContent = 'Aguardando cooldown...';
                if (cooldownEl) {
                    cooldownEl.textContent = `⏳ Libera em: ${formatTime(timeUntilNext)}`;
                    cooldownEl.className = 'text-xs text-red-400 mt-3 text-center font-medium blink-alert';
                }
                if (statusEl) statusEl.innerHTML = '<div class="status-dot offline"></div><span class="text-sm text-red-400 font-medium">Limite</span>';
            } else if (remaining <= 1) {
                if (progressEl) progressEl.className = 'h-full bg-gradient-to-r from-yellow-500 to-orange-400 rounded-full transition-all duration-500';
                if (statusTextEl) statusTextEl.textContent = 'Quase no limite';
                if (cooldownEl) {
                    cooldownEl.textContent = `⚠️ Apenas ${remaining} mensagem restante`;
                    cooldownEl.className = 'text-xs text-yellow-400 mt-3 text-center font-medium';
                }
                if (statusEl) statusEl.innerHTML = '<div class="status-dot warning"></div><span class="text-sm text-yellow-400 font-medium">Quase</span>';
            } else {
                if (progressEl) progressEl.className = 'h-full bg-gradient-to-r from-green-500 to-emerald-400 rounded-full transition-all duration-500';
                if (statusTextEl) statusTextEl.textContent = 'Disponível para enviar';
                if (cooldownEl) {
                    cooldownEl.textContent = `✅ ${remaining} mensagens disponíveis`;
                    cooldownEl.className = 'text-xs text-green-400 mt-3 text-center font-medium';
                }
                if (statusEl) statusEl.innerHTML = '<div class="status-dot online"></div><span class="text-sm text-green-400 font-medium">OK</span>';
            }
        }
    </script>
