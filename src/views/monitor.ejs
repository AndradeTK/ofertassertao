        let serverStartTime = Date.now();
        const MAX_ACTIVITY_LOG = 50;

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            initWebSocket();
            updateClock();
            setInterval(updateClock, 1000);
            
            initHourlyChart();
