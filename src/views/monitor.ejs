                if (res.ok) {
                    const data = await res.json();
                    const sent = data.sent || 0;
                    const approved = data.approved || 0;
                    const rejected = data.rejected || 0;
                    const duplicates = data.duplicates || 0;
                    
                    document.getElementById('statSentToday').textContent = sent;
                    document.getElementById('statApprovedToday').textContent = approved;
                    document.getElementById('statRejectedToday').textContent = rejected;
                    document.getElementById('statDuplicatesToday').textContent = duplicates;
                    
                    // Calculate approval rate
                    const total = approved + rejected;
                    const rate = total > 0 ? Math.round((approved / total) * 100) : 0;
                    const approvalRateEl = document.getElementById('approvalRate');
                    const approvalBarEl = document.getElementById('approvalRateBar');
                    if (approvalRateEl) approvalRateEl.textContent = `${rate}%`;
                    if (approvalBarEl) approvalBarEl.style.width = `${rate}%`;
                    
                    // Update source distribution
                    updateSourceDistribution(data.bySource || {});
                }
            } catch (err) {
                console.debug('Stats not available');
            }
        }
        
        function updateSourceDistribution(sources) {
            const total = Object.values(sources).reduce((a, b) => a + b, 0) || 1;
            
            const mlEl = document.getElementById('sourceMl');
            const shopeeEl = document.getElementById('sourceShopee');
            const amazonEl = document.getElementById('sourceAmazon');
            const aliEl = document.getElementById('sourceAli');
            
            const mlBar = document.getElementById('sourceMlBar');
            const shopeeBar = document.getElementById('sourceShopeeBar');
            const amazonBar = document.getElementById('sourceAmazonBar');
            const aliBar = document.getElementById('sourceAliBar');
            
            if (mlEl) mlEl.textContent = sources.mercadolivre || 0;
            if (shopeeEl) shopeeEl.textContent = sources.shopee || 0;
            if (amazonEl) amazonEl.textContent = sources.amazon || 0;
            if (aliEl) aliEl.textContent = sources.aliexpress || 0;
            
            if (mlBar) mlBar.style.width = `${((sources.mercadolivre || 0) / total) * 100}%`;
            if (shopeeBar) shopeeBar.style.width = `${((sources.shopee || 0) / total) * 100}%`;
            if (amazonBar) amazonBar.style.width = `${((sources.amazon || 0) / total) * 100}%`;
            if (aliBar) aliBar.style.width = `${((sources.aliexpress || 0) / total) * 100}%`;
        }

        async function refreshLastSent() {
            try {
                const res = await fetch('/api/recent-sent?limit=10');
                if (res.ok) {
                    const promotions = await res.json();
                    const container = document.getElementById('lastSentList');
                    
                    if (!promotions || promotions.length === 0) {
                        container.innerHTML = `
                            <div class="text-blue-300 text-sm text-center py-8">
                                <i class="fas fa-inbox text-3xl mb-2 opacity-50"></i>
                                <p>Nenhuma promoção enviada ainda</p>
                            </div>
                        `;
                        return;
                    }
                    
                    container.innerHTML = promotions.map(promo => {
                        const time = promo.sent_at ? new Date(promo.sent_at).toLocaleTimeString('pt-BR') : '--:--';
                        const sourceColors = {
                            'mercadolivre': 'from-yellow-500 to-yellow-600',
                            'amazon': 'from-orange-500 to-orange-600',
                            'shopee': 'from-orange-600 to-red-500',
                            'aliexpress': 'from-red-500 to-red-600',
                            'magalu': 'from-blue-500 to-blue-600'
                        };
                        const color = sourceColors[promo.source?.toLowerCase()] || 'from-gray-500 to-gray-600';
                        
                        return `
                            <div class="bg-white/5 hover:bg-white/10 rounded-lg p-3 transition-colors">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 bg-gradient-to-br ${color} rounded-lg flex items-center justify-center flex-shrink-0 shadow-lg">
                                        <i class="fas fa-tag"></i>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium truncate">${promo.product_name || 'Produto'}</p>
                                        <div class="flex items-center gap-2 text-xs text-blue-300">
                                            <span class="capitalize">${promo.source || 'Desconhecido'}</span>
                                            <span>•</span>
                                            <span>${time}</span>
                                        </div>
                                    </div>
                                    ${promo.price ? `<span class="text-green-400 font-semibold text-sm whitespace-nowrap">R$ ${promo.price}</span>` : ''}
                                </div>
                            </div>
                        `;
                    }).join('');
                }
            } catch (err) {
                console.debug('Recent sent not available');
            }
        }
        
